# Dockerfile for Deployment Check Service (Level 1)
# Lightweight image to run validation scripts

FROM alpine:latest

# Install required tools
RUN apk add --no-cache bash curl

WORKDIR /app

# Copy check script to scripts directory
COPY scripts/deploy_check_level1.sh scripts/deploy_check_level1.sh

# Ensure executable permissions
RUN chmod +x scripts/deploy_check_level1.sh

# Run check by default
CMD ["bash", "scripts/deploy_check_level1.sh"]
